<%- include ('./partials/head.ejs') %> 
<body>
    <div class="container row justify-content-center">
        <h1 class="text-center"> Ingrese sus datos para registrarse</h1>
        <div class="jumbotron col-sm-4 pull-center">
            <form autocomplete="off" action="/register" method="post">
                <div class="form-group">
                    <label>Username:</label>
                    <input
                        class="form-control"
                        required
                        type="text"
                        name="username"
                    />
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input
                        class="form-control"
                        required
                        type="email"
                        name="email"
                    />
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input
                        class="form-control"
                        required
                        type="password"
                        name="password"
                    />
                </div>
                <div class="form-group mt-4">
                    <input
                        class="btn btn-primary"
                        type="submit"
                        value="Registro"
                    />
                    <a class="btn btn-danger ml-2" href="/" role="button">Volver atras</a>
                </div>
            </form>
        </div>
    </div>  
    <br>
    <footer>
        <%- include ('./partials/footer.ejs') %> 
    </footer>
</body>
</html>